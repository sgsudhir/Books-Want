<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            card_view:cardCornerRadius="5dp"
            card_view:contentPadding="10dp"
            card_view:cardUseCompatPadding="true"
            card_view:cardBackgroundColor="@color/card_background">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_weight="7"
                    android:text="Show only download availablity"
                    android:textStyle="normal"
                    android:textSize="20sp"
                    android:gravity="center|left"/>
                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/content_main_switch_download"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_gravity="center"
                    android:checked="false"
                    android:theme="@style/ToggleSwitch"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/card_view2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            card_view:cardCornerRadius="5dp"
            card_view:contentPadding="10dp"
            card_view:cardUseCompatPadding="true"
            card_view:cardBackgroundColor="@color/card_background">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Order by"
                    android:textStyle="normal"
                    android:textSize="20sp"
                    android:gravity="left"/>
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:checkedButton="@+id/content_main_radio_orderby_anything"
                    android:layout_marginTop="16dp">
                    <RadioButton
                        android:id="@+id/content_main_radio_orderby_newest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:onClick="orderbyRadioButtonClicked"
                        android:buttonTint="@color/colorPrimaryDark"
                        android:text="Newest" />
                    <RadioButton
                        android:id="@+id/content_main_radio_orderby_relevance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:onClick="orderbyRadioButtonClicked"
                        android:buttonTint="@color/colorPrimaryDark"
                        android:text="Relevance" />
                    <RadioButton
                        android:id="@+id/content_main_radio_orderby_anything"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:onClick="orderbyRadioButtonClicked"
                        android:buttonTint="@color/colorPrimaryDark"
                        android:text="Anything" />
                </RadioGroup>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/card_view3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            card_view:cardCornerRadius="5dp"
            card_view:contentPadding="10dp"
            card_view:cardUseCompatPadding="true"
            card_view:cardBackgroundColor="@color/card_background">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Print type"
                    android:textStyle="normal"
                    android:textSize="20sp"
                    android:gravity="left"/>
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:checkedButton="@+id/content_main_radio_printtype_all"
                    android:layout_marginTop="16dp">
                    <RadioButton
                        android:id="@+id/content_main_radio_printtype_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:onClick="printtypeRadioButtonClicked"
                        android:buttonTint="@color/colorPrimaryDark"
                        android:text="All" />
                    <RadioButton
                        android:id="@+id/content_main_radio_printtype_books"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:onClick="printtypeRadioButtonClicked"
                        android:buttonTint="@color/colorPrimaryDark"
                        android:text="Books" />
                    <RadioButton
                        android:id="@+id/content_main_radio_printtype_magazines"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:onClick="printtypeRadioButtonClicked"
                        android:buttonTint="@color/colorPrimaryDark"
                        android:text="Magazines" />
                </RadioGroup>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/card_view4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            card_view:cardCornerRadius="5dp"
            card_view:contentPadding="10dp"
            card_view:cardUseCompatPadding="true"
            card_view:cardBackgroundColor="@color/card_background">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="Filter by"
                    android:textStyle="normal"
                    android:textSize="20sp"
                    android:gravity="left"/>
                <RadioGroup
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:orientation="vertical"
                    android:checkedButton="@+id/content_main_radio_filterby_all"
                    android:layout_marginTop="16dp">
                    <RadioButton
                        android:id="@+id/content_main_radio_filterby_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:onClick="filterbyRadioButtonClicked"
                        android:buttonTint="@color/colorPrimaryDark"
                        android:text="All eBooks" />
                    <RadioButton
                        android:id="@+id/content_main_radio_filterby_free"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:onClick="filterbyRadioButtonClicked"
                        android:buttonTint="@color/colorPrimaryDark"
                        android:text="Free eBooks" />
                    <RadioButton
                        android:id="@+id/content_main_radio_filterby_paid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:onClick="filterbyRadioButtonClicked"
                        android:buttonTint="@color/colorPrimaryDark"
                        android:text="Paid eBooks" />
                    <RadioButton
                        android:id="@+id/content_main_radio_filterby_full"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:onClick="filterbyRadioButtonClicked"
                        android:buttonTint="@color/colorPrimaryDark"
                        android:text="Full eBooks" />
                    <RadioButton
                        android:id="@+id/content_main_radio_filterby_sample"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:onClick="filterbyRadioButtonClicked"
                        android:buttonTint="@color/colorPrimaryDark"
                        android:text="Sample eBooks" />
                </RadioGroup>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>
