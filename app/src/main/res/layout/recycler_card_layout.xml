<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:tag="cards main container">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/search_result_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/cyan"
        card_view:cardCornerRadius="2dp"
        card_view:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:padding="2dp">
            <LinearLayout
                android:id="@+id/layout_linear_dynamic"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:layout_gravity="center"
                android:orientation="vertical">
                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    card_view:cardBackgroundColor="#FFFFFF"
                    card_view:cardCornerRadius="10dp"
                    card_view:cardElevation="5dp">
                    <ImageView
                        android:id="@+id/recycler_card_image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:src="@drawable/ic_launcher"/>
                </android.support.v7.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:orientation="vertical"
                android:layout_marginLeft="0dp">
                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardBackgroundColor="#FFFFFF"
                    card_view:cardCornerRadius="10dp"
                    card_view:cardElevation="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="10dp"
                        android:padding="10dp">
                        <TextView
                            android:id="@+id/recycler_card_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Unknown title for this Book"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorTitle"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"/>
                        <TextView
                            android:id="@+id/recycler_card_author"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Unknown author for this Book"
                            android:textSize="17sp"
                            android:textStyle="normal"
                            android:layout_marginBottom="2dp"/>
                        <TextView
                            android:id="@+id/recycler_card_publisher"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Unknown publisher for this Book"
                            android:textSize="15sp"
                            android:textStyle="normal"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>